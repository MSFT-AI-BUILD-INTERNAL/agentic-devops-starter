# Example Terraform variables file
# Copy this file to terraform.tfvars and customize the values

# Resource Group Configuration
resource_group_name = "rg-agentic-devops"
location            = "eastus"

# Azure Container Registry Configuration
acr_name         = "acragenticdevops"  # Must be globally unique and alphanumeric only
acr_sku          = "Standard"          # Options: Basic, Standard, Premium
acr_admin_enabled = false              # Set to true if you need admin credentials

# Azure Kubernetes Service Configuration
aks_cluster_name   = "aks-agentic-devops"
aks_dns_prefix     = "aks-agentic-devops"
kubernetes_version = "1.32"

# Node Pool Configuration
node_count          = 2
vm_size             = "Standard_D2s_v3"
enable_auto_scaling = true
min_node_count      = 1
max_node_count      = 5

# Log Analytics Configuration
log_analytics_workspace_name = "log-agentic-devops"
log_analytics_sku            = "PerGB2018"          # Options: Free, PerNode, Premium, Standard, Standalone, Unlimited, CapacityReservation, PerGB2018
log_analytics_retention_days = 30                   # Retention period in days (7-730 for paid tier, 7 for free tier)

# Application Gateway Configuration
app_gateway_name            = "appgw-agentic-devops"
app_gateway_public_ip_name  = "pip-appgw-agentic-devops"
vnet_name                   = "vnet-agentic-devops"
vnet_address_space          = "10.1.0.0/16"
appgw_subnet_name           = "appgw-subnet"
appgw_subnet_prefix         = "10.1.0.0/24"
aks_subnet_name             = "aks-subnet"
aks_subnet_prefix           = "10.1.1.0/24"
app_gateway_sku_name        = "Standard_v2"         # Options: Standard_v2, WAF_v2
app_gateway_sku_tier        = "Standard_v2"         # Options: Standard_v2, WAF_v2
app_gateway_capacity        = 2                     # Instance count (1-125)
waf_firewall_mode           = "Detection"           # Options: Detection, Prevention (only for WAF_v2)

# Key Vault Configuration for SSL Certificates
enable_https                          = true                      # Enable HTTPS with SSL certificate
key_vault_name                        = "kv-agentic-devops"       # Must be globally unique (3-24 chars)
key_vault_sku                         = "standard"                # Options: standard, premium
key_vault_soft_delete_retention_days  = 7                         # Days to retain deleted vault (7-90)
key_vault_purge_protection_enabled    = false                     # Prevent permanent deletion
key_vault_network_default_action      = "Allow"                   # Options: Allow, Deny
create_self_signed_cert               = true                      # Create self-signed cert for testing
certificate_name                      = "app-gateway-ssl-cert"    # Certificate name in Key Vault
ssl_certificate_name                  = "appgw-ssl-certificate"   # Certificate name in App Gateway
certificate_subject                   = "agentic-devops.local"    # Certificate subject (CN)
certificate_dns_names                 = ["agentic-devops.local", "*.agentic-devops.local"]  # SANs

# Tags
tags = {
  Environment = "Development"
  Project     = "Agentic DevOps Starter"
  ManagedBy   = "Terraform"
}
