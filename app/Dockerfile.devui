# Backend-only Docker build for Dev-UI server
# Dev-UI provides its own built-in web interface

FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    gcc \
    g++ \
    libffi-dev \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Install uv package manager
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Copy backend dependency files
COPY app/pyproject.toml app/uv.lock ./

# Install Python dependencies using uv with system python
RUN uv sync --frozen --no-dev

# Copy backend application code
COPY app/ .

# Expose port 8080 for Dev-UI
EXPOSE 8080

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PATH="/app/.venv/bin:$PATH"
ENV PORT=8080

# Run Dev-UI server
CMD ["/app/.venv/bin/python", "devui_server.py"]
